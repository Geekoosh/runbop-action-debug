{
  "name": "runbop-debug",
  "version": "1.0.0",
  "description": "GitHub Action for debugging workflows on self-hosted runners",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/main.ts -o dist",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,yml,yaml}\"",
    "format-check": "prettier --check \"**/*.{ts,tsx,md,json,yml,yaml}\"",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "prepare": "husky install",
    "all": "npm run build && npm run format && npm run lint && npm run test"
  },
  "keywords": [
    "actions",
    "debug",
    "self-hosted"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@typescript-eslint/parser": "^5.59.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-github": "^4.7.0",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "js-yaml": "^4.1.0",
    "lint-staged": "^15.0.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "**/*.{ts,tsx,md,json,yml,yaml}": "prettier --write"
  }
}
